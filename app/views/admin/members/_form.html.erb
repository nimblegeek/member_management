<%= form_with(model: [:admin, @member], class: "space-y-6") do |form| %>
  <% if @member.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative mb-4" role="alert">
      <strong class="font-bold">Error:</strong>
      <span class="block sm:inline">Please correct the following <%= pluralize(@member.errors.count, "error") %>:</span>
      <ul class="list-disc ml-5 mt-2">
        <% @member.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
    <div>
      <%= form.label :first_name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :first_name, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :last_name, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :last_name, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :email, class: "block text-sm font-medium text-gray-700" %>
      <%= form.email_field :email, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :phone, class: "block text-sm font-medium text-gray-700" %>
      <%= form.telephone_field :phone, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :date_of_birth, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :date_of_birth, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :rank, class: "block text-sm font-medium text-gray-700" %>
      <%= form.select :rank, 
          ["White Belt", "Yellow Belt", "Orange Belt", "Green Belt", "Blue Belt", "Purple Belt", "Brown Belt", "Black Belt", "1st Dan", "2nd Dan", "3rd Dan", "4th Dan", "5th Dan"], 
          {}, 
          { class: "mt-1 block w-full py-2 px-3 border border-gray-300 bg-white rounded-md shadow-sm focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm" } 
      %>
    </div>

    <div>
      <%= form.label :join_date, class: "block text-sm font-medium text-gray-700" %>
      <%= form.date_field :join_date, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :active, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-2">
        <div class="flex items-center">
          <%= form.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <div class="ml-3 text-sm">
            <label for="member_active" class="font-medium text-gray-700">Active member</label>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="mt-4">
    <%= form.label :address, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_field :address, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-6 mt-4">
    <div>
      <%= form.label :city, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :city, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :state, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :state, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>

    <div>
      <%= form.label :postal_code, class: "block text-sm font-medium text-gray-700" %>
      <%= form.text_field :postal_code, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
    </div>
  </div>

  <div class="mt-4">
    <%= form.label :notes, class: "block text-sm font-medium text-gray-700" %>
    <%= form.text_area :notes, rows: 4, class: "mt-1 focus:ring-blue-500 focus:border-blue-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
  </div>

  <div class="flex justify-end">
    <%= link_to "Cancel", @member.new_record? ? admin_members_path : admin_member_path(@member), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 mr-2" %>
    <%= form.submit class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
  </div>
<% end %> 